        <Label x:Name="lb_Angulo" Content="Ângulo Atual: 0" Grid.Column="2" Grid.Row="2" RenderTransformOrigin="0.577,0.451" Margin="0,4,0,0" Grid.ColumnSpan="2" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105"/>
        <Canvas x:Name="canvasKinect" Grid.Column="2" Grid.Row="1" Margin="0,2,1,0" Background="#FFF5E6E6" />
        <StackPanel Grid.ColumnSpan="5" Height="8" Grid.Row="3" VerticalAlignment="Top" Background="Black" Margin="0,0,-1,0"/>
    </Grid>
</Window>
